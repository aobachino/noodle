.row.card
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name, class: 'col-form-label'
    = f.text_field :name, class: 'form-control', autofocus: true, autocomplete: "name"
  .field
    = f.label :email, class: 'col-form-label'
    = f.email_field :email, class: 'form-control', autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :password, class: 'col-form-label'
    %i (変更しないなら、空欄のままでOK！！)
    = f.password_field :password, class: 'form-control', autocomplete: "new-password"
    - if @minimum_password_length
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation, class: 'col-form-label'
    = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"
  .field
    = f.label :current_password, class: 'col-form-label'
    %i (変更する場合、現在のパスワードを入力してください)
    = f.password_field :current_password, class: 'form-control', autocomplete: "current-password"
  .actions
    = f.submit "Update", class: 'btn-primary'
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back
