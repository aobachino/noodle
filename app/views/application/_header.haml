%header#app--header
  %nav.navbar.navbar-expand-lg.navbar-light.bg-light
    %a.navber-brand{href: "#{root_path}"}
      ラーメン
    %button.navbar-toggler{ type: "button", 'data-toggle': 'collapse', 'data-target': '#navbarNavAltMarkup', 'aria-controls': 'navbarNavAltMarkup', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation' }

      %span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNavAltMarkup
      %ul.navbar-nav.mr-auto
        %li.nav-item
          = link_to 'Home', root_path, class: 'nav-link'
        - unless user_signed_in?
          %li.nav-item
            = link_to 'Signup', new_user_registration_path, id: 'signup-link', class: 'nav-link'
          %li.nav-item
            = link_to 'Login', new_user_session_path, id: 'login-link', class: 'nav-link'
        - if user_signed_in?
          %li.nav-item
            = link_to 'Logout', destroy_user_session_path, method: :delete, id: 'logout-link', class: 'nav-link'
          %li.nav-item
            = link_to "#{current_user.name}", edit_user_registration_path, class: 'nav-link'
